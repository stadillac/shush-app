<!-- ios/ShushApp/Info.plist -->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Your existing plist content -->
    
    <!-- App Groups for sharing data between app and extensions -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.yourcompany.shush</string>
    </array>
    
    <!-- Background modes for sync -->
    <key>UIBackgroundModes</key>
    <array>
        <string>background-processing</string>
        <string>background-fetch</string>
    </array>
    
    <!-- Privacy descriptions -->
    <key>NSContactsUsageDescription</key>
    <string>Shush needs access to contacts to help you block specific people and protect your digital boundaries.</string>
    
    <key>NSPhoneCallsUsageDescription</key>
    <string>Shush needs call access to block unwanted calls from people you've chosen to avoid for your mental health.</string>
</dict>
</plist>